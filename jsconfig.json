  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "jsx": "react",
    "paths": {
      "pages/*": ["./pages/*"],
      "components/*": ["./components/*"],
      "services/*": ["./services/*"]
